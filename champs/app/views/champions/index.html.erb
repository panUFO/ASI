<p id="notice"><%= notice %></p>

<h1>League of Legends Champions</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Typ</th>
      <th>Cena</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @champions.each do |champion| %>
      <tr>
        <td><%= champion.nazwa %></td>
        <td><%= champion.typ %></td>
        <td><%= champion.cena %></td>
        <td><%= link_to 'Szczegóły', champion %></td>
        <td><%= link_to 'Edytuj', edit_champion_path(champion) %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Usuń', champion, method: :delete, data: { confirm: 'Jesteś pewny?' } %></td>
        <% else  %>
	      
        <% end %>
      </tr>
    <% end %>
    
  </tbody>
</table>

<center>
  <%= will_paginate @champions %>
  
</center>

<br>

<%= link_to 'New Champion', new_champion_path %>